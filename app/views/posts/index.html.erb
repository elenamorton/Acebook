<%= link_to new_post_path do %>
<br/>
  <strong>Add New post</strong>
<% end %>


<% @posts.each do |post| %>
<div>
  <p>
    <%= post.message %>
     Created on: <span><%= post.created_at.strftime("%F") %></span>
  </p>

  <%= link_to post_path(post) do %>
  <span>View</span>
  <% end %>
  <br/>
</div>
<% end %>
